<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:layout_weight="1.0"
>
	<TextView 
		android:textSize="10.0dp" 
		android:gravity="left" 
		android:id="@+id/event_date" 
		android:paddingLeft="10.0dip" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Mar 27" style="@+style/text_shadow"
	/>

	<TextView
	    android:id="@+id/event_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:ellipsize="end"
	    android:maxLines="2"
	    android:paddingLeft="10.0dip"
	    android:text="Title"
	    android:textSize="19.0dp"
	    style="@+style/text_shadow" />

	<TextView 
		android:textSize="10.0dp" 
		android:gravity="left" 
		android:id="@+id/event_location"
		android:paddingLeft="10.0dip" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Location" style="@+style/text_shadow"
	/>
	<TextView 
		android:textSize="10.0dp" 
		android:gravity="left" 
		android:id="@+id/event_times"
		android:paddingLeft="10.0dip" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="10:00 - 14:00" style="@+style/text_shadow"
	/>
</LinearLayout>