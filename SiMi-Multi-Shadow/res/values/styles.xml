<?xml version="1.0" encoding="UTF-8"?>
<resources>
    
    <style name="item_shadow">
        <item name="android:shadowColor">#DD000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>
    <style name="listViewStyle" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
    <style name="text_shadow" parent="item_shadow">
        <item name="android:textColor">#DDFFFFFF</item>
    </style>
</resources>